<svg width="800" height="600" viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="matrixGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0a23;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#3C3C66;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0a0a23;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="glowGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00FFAA;stop-opacity:0.3" />
      <stop offset="50%" style="stop-color:#888EF0;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#00FFAA;stop-opacity:0.3" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="600" fill="url(#matrixGradient)"/>
  
  <!-- Grid Pattern -->
  <defs>
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#00FFAA" stroke-width="0.5" opacity="0.2"/>
    </pattern>
  </defs>
  <rect width="800" height="600" fill="url(#grid)"/>
  
  <!-- Glow Effect -->
  <circle cx="400" cy="300" r="200" fill="url(#glowGradient)" opacity="0.3"/>
  
  <!-- Project Icon -->
  <g transform="translate(350, 250)">
    <!-- Monitor -->
    <rect x="0" y="20" width="100" height="70" rx="8" fill="none" stroke="#00FFAA" stroke-width="2"/>
    <rect x="5" y="25" width="90" height="50" fill="#0a0a23"/>
    
    <!-- Code Lines -->
    <line x1="10" y1="35" x2="40" y2="35" stroke="#00FFAA" stroke-width="1.5"/>
    <line x1="10" y1="45" x2="60" y2="45" stroke="#888EF0" stroke-width="1.5"/>
    <line x1="10" y1="55" x2="35" y2="55" stroke="#00FFAA" stroke-width="1.5"/>
    <line x1="10" y1="65" x2="50" y2="65" stroke="#888EF0" stroke-width="1.5"/>
    
    <!-- Stand -->
    <rect x="45" y="90" width="10" height="15" fill="#00FFAA"/>
    <rect x="35" y="105" width="30" height="5" rx="2" fill="#888EF0"/>
  </g>
  
  <!-- Title -->
  <text x="400" y="150" text-anchor="middle" fill="#00FFAA" font-family="monospace" font-size="24" font-weight="bold">
    PROJECT PREVIEW
  </text>
  
  <!-- Subtitle -->
  <text x="400" y="180" text-anchor="middle" fill="#888EF0" font-family="monospace" font-size="16">
    Coming Soon...
  </text>
  
  <!-- Matrix Rain Effect -->
  <g opacity="0.1">
    <text x="100" y="50" fill="#00FFAA" font-family="monospace" font-size="12">01001001</text>
    <text x="200" y="100" fill="#888EF0" font-family="monospace" font-size="12">11010110</text>
    <text x="300" y="150" fill="#00FFAA" font-family="monospace" font-size="12">10110101</text>
    <text x="500" y="200" fill="#888EF0" font-family="monospace" font-size="12">01101001</text>
    <text x="600" y="250" fill="#00FFAA" font-family="monospace" font-size="12">11001010</text>
    <text x="700" y="300" fill="#888EF0" font-family="monospace" font-size="12">10101101</text>
  </g>
</svg>
