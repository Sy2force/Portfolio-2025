<svg width="1200" height="630" viewBox="0 0 1200 630" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0a23;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#3C3C66;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0a0a23;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#00FFAA;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#888EF0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#00FFAA;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Grid Pattern -->
  <defs>
    <pattern id="gridPattern" width="60" height="60" patternUnits="userSpaceOnUse">
      <path d="M 60 0 L 0 0 0 60" fill="none" stroke="#00FFAA" stroke-width="0.5" opacity="0.1"/>
    </pattern>
  </defs>
  <rect width="1200" height="630" fill="url(#gridPattern)"/>
  
  <!-- Glow Effects -->
  <circle cx="200" cy="150" r="150" fill="#00FFAA" opacity="0.1"/>
  <circle cx="1000" cy="480" r="200" fill="#888EF0" opacity="0.1"/>
  
  <!-- Logo SA -->
  <g transform="translate(100, 200)">
    <rect x="0" y="0" width="120" height="120" rx="20" fill="none" stroke="url(#textGradient)" stroke-width="3"/>
    <text x="60" y="75" text-anchor="middle" fill="url(#textGradient)" font-family="monospace" font-size="48" font-weight="bold">SA</text>
  </g>
  
  <!-- Main Title -->
  <text x="300" y="280" fill="url(#textGradient)" font-family="Arial, sans-serif" font-size="64" font-weight="bold">
    Shay Acoca
  </text>
  
  <!-- Subtitle -->
  <text x="300" y="340" fill="#ffffff" font-family="Arial, sans-serif" font-size="32" opacity="0.9">
    Développeur Full-Stack &amp; Expert Marketing
  </text>
  
  <!-- Description -->
  <text x="300" y="390" fill="#ffffff" font-family="Arial, sans-serif" font-size="24" opacity="0.7">
    Portfolio professionnel - Jérusalem, Israël
  </text>
  
  <!-- Tech Stack -->
  <g transform="translate(300, 450)">
    <rect x="0" y="0" width="80" height="30" rx="15" fill="#00FFAA" opacity="0.2"/>
    <text x="40" y="20" text-anchor="middle" fill="#00FFAA" font-family="Arial, sans-serif" font-size="14">React</text>
    
    <rect x="90" y="0" width="80" height="30" rx="15" fill="#888EF0" opacity="0.2"/>
    <text x="130" y="20" text-anchor="middle" fill="#888EF0" font-family="Arial, sans-serif" font-size="14">Next.js</text>
    
    <rect x="180" y="0" width="80" height="30" rx="15" fill="#00FFAA" opacity="0.2"/>
    <text x="220" y="20" text-anchor="middle" fill="#00FFAA" font-family="Arial, sans-serif" font-size="14">Node.js</text>
    
    <rect x="270" y="0" width="100" height="30" rx="15" fill="#888EF0" opacity="0.2"/>
    <text x="320" y="20" text-anchor="middle" fill="#888EF0" font-family="Arial, sans-serif" font-size="14">Marketing</text>
  </g>
  
  <!-- Matrix Code -->
  <g opacity="0.1" fill="#00FFAA" font-family="monospace" font-size="16">
    <text x="900" y="100">01001001 11010110</text>
    <text x="900" y="130">10110101 01101001</text>
    <text x="900" y="160">11001010 10101101</text>
    <text x="900" y="190">01010110 11100101</text>
  </g>
</svg>
